    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">
    <androidx.appcompat.widget.Toolbar
        android:fontFamily="@font/ys_display_medium"
        android:id="@+id/toolbarSearch"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:backgroundTintMode="?attr/colorPrimary"
        app:navigationIcon="@drawable/back"
        app:iconTint="@color/white"
        app:title="@string/search"
        app:titleTextColor="?attr/colorOnPrimary"
        android:layout_marginTop="@dimen/padding_Start"
        android:gravity="center"
        app:buttonGravity="center_vertical"
        app:iconPadding="@dimen/padding_Start">
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="@dimen/layout_marginTop_editText"
        >
        <EditText
            android:layout_width ="match_parent"
            android:layout_height="36dp"
            android:id="@+id/editTextSearch"
            android:hint="@string/search"
            android:drawableStart="@drawable/search"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:imeOptions="actionDone"
            android:singleLine="true"
            style="@style/TextEditStyle"
            />
        <ImageView
            android:layout_width="@dimen/icon_close_Width"
            android:layout_height ="@dimen/icon_close_Width"
            android:layout_gravity ="end|center_vertical"
            android:id="@+id/clearIcon"
            app:srcCompat="@drawable/menu_close_clear_cancel"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            />
    </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/track_item"
            android:layout_marginTop="16dp"
            tools:itemCount="5"
            android:foreground="?attr/selectableItemBackground"
            />
    <ImageView
        android:id="@+id/iv_Error"
        android:layout_width="@dimen/widthHeightImageError"
        android:layout_height="@dimen/widthHeightImageError"
        android:layout_marginTop="@dimen/MarginTopImageError"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_Error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tool:text="Ошибка"
        android:layout_marginTop="@dimen/MarginTopTextError"
        android:layout_marginStart="@dimen/MarginStartEndTextError"
        android:layout_marginEnd="@dimen/MarginStartEndTextError"
        android:layout_gravity="center"
        android:textSize="@dimen/SizeTextError"
        android:textColor="?attr/errorIconDrawable"
        android:textAlignment="center"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/Refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/errorIconDrawable"
        android:textColor="?attr/errorTextColor"
        android:text="@string/Refresh"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textSize="@dimen/SizeButtonRefresh"
        android:layout_marginTop="@dimen/MarginTopRefresh"
        android:visibility="gone"
        style="@style/Refresh"/>

<LinearLayout
    android:id="@+id/HistoryLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">
        <TextView
            android:id="@+id/tv_searchHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SearchMessage"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:textColor="?attr/colorPrimaryDark"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"

            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/track_item"
            android:foreground="?attr/selectableItemBackground"
            tools:itemCount="5"
            />
        <Button
            android:id="@+id/ClearHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/errorIconDrawable"
            android:textColor="?attr/errorTextColor"
            android:text="@string/ClearHistory"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textSize="@dimen/SizeButtonRefresh"
            android:layout_marginTop="@dimen/MarginTopRefresh"
            style="@style/Refresh"
           />
</LinearLayout>

</LinearLayout>
