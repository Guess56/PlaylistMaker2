
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:fontFamily="@font/ys_display_medium"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:backgroundTintMode="?attr/colorPrimary"
        app:iconTint="@color/white"
        app:navigationIcon="@drawable/back"
        app:title="@string/option"
        app:titleTextColor="?attr/colorOnPrimary"
        android:layout_marginTop="@dimen/padding_Start"
        android:gravity="center"
        app:buttonGravity="center_vertical"
        app:iconPadding="@dimen/padding_Start">
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switcherTheme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_layout_height"
        android:layout_marginEnd="6dp"
        android:backgroundTint="?attr/background"
        android:fontFamily="@font/ys_display_medium"
        android:padding="@dimen/padding_Start"
        android:text="@string/themes"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_layout_height">
        <TextView
            android:layout_width ="@dimen/layout_width"
            android:layout_weight ="@dimen/layout_weight"
            android:layout_height ="match_parent"
            android:gravity ="start|center_vertical"
            android:id="@+id/textVievShare"
            android:text="@string/share"
            style="@style/Text_View_style"/>
        <ImageView
            android:layout_width ="@dimen/icon_Width"
            android:layout_height ="@dimen/layout_height"
            android:layout_gravity ="end|center_vertical"
            android:id="@+id/share"
            app:srcCompat="@drawable/share"
            style="@style/Image_View_style"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_layout_height">
        <TextView
            android:layout_width ="@dimen/layout_width"
            android:layout_weight ="@dimen/layout_weight"
            android:layout_height ="match_parent"
            android:gravity ="start|center_vertical"
            android:id="@+id/textVievSupport"
            android:text="@string/support"
            style="@style/Text_View_style"/>
        <ImageView
            android:layout_width ="@dimen/icon_Width"
            android:layout_height ="@dimen/layout_height"
            android:layout_gravity ="end|center_vertical"
            android:id="@+id/support"
            app:srcCompat="@drawable/support"
            style="@style/Image_View_style"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_layout_height">
        <TextView
            android:layout_width ="@dimen/layout_width"
            android:layout_weight ="@dimen/layout_weight"
            android:layout_height ="match_parent"
            android:gravity ="start|center_vertical"
            android:id="@+id/textVievAgreement"
            android:text="@string/forward"
            style="@style/Text_View_style"/>
        <ImageView
            android:layout_width ="@dimen/icon_Width"
            android:layout_height ="@dimen/layout_height"
            android:layout_gravity ="end|center_vertical"
            android:id="@+id/forward"
            app:srcCompat="@drawable/forward"
            style="@style/Image_View_style"
            />
    </LinearLayout>




</LinearLayout>


