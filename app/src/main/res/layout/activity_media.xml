<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".media.presentation.MediaActivity">

    <androidx.appcompat.widget.Toolbar
        android:fontFamily="@font/ys_display_medium"
        android:id="@+id/toolbarMedia"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTintMode="?attr/colorPrimary"
        app:navigationIcon="@drawable/back"
        app:iconTint="@color/white"
        app:title="Медиатека"
        app:titleTextColor="?attr/colorOnPrimary"
        android:layout_marginTop="@dimen/margin_Top_Search"
        android:gravity="center"
        app:buttonGravity="center_vertical"
        app:titleMarginStart="@dimen/padding_Search_Start"
        app:iconPadding="@dimen/padding_Start">
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:textColor="?attr/errorIconDrawable"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="?attr/errorIconDrawable"
        app:tabIndicatorColor="?attr/errorIconDrawable"
        android:layout_marginHorizontal="16dp"
        />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>