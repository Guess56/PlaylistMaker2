<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button_style" parent = "Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="Text_View_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">@dimen/padding_Start</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginEnd">@dimen/layout_marginEnd</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="Image_View_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tint">?attr/iconTint</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginEnd">@dimen/layout_marginEnd</item>
    </style>
    <style name="TextEditStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:paddingStart">@dimen/drawablePaddingStart</item>
        <item name="android:textSize">@dimen/textSizeEdit</item>
        <item name="android:paddingEnd">40dp</item>

    </style>
    <style name="tv_Track">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="tv_TrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="tint">?attr/colorOnSecondary</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="iv_Track">
        <item name="tint">?attr/colorOnSecondary</item>
    </style>
    <style name="Refresh">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/CornerRadiusRefresh</item>
    </style>
</resources>